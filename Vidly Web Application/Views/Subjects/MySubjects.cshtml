@model IEnumerable<Vidly_Web_Application.Models.Subject>

@{
    ViewBag.Title = "MySubjects";
}

<h2>MySubjects</h2>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>
                Subject Code
            </th>
            <th>
                Subject Name
            </th>
            <th>
                Credits
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in @Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.SubjectCode)
                </td>
                <td>
                    @Html.DisplayFor(model => item.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Credits)
                </td>
            </tr>
        }
    </tbody>
</table>