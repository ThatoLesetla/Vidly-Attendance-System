@model Vidly_Web_Application.Models.Subject

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Subject</h4>
        <hr />
        <div class="form-group">
            <label>Subject Code</label>
            @Html.EditorFor(model => model.SubjectCode)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <br />

        <div class="form-group">
            <label>Subject Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <label>Department Code</label>
            <div class="col-md-10">
                @Html.DropDownList("DepartmentCode", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartmentCode, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <label>Credits</label>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Credits, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DropDownListFor(model => model.Credits,
         new List<SelectListItem>
         {
                        new SelectListItem {Text = "50", Value = "50"},
                        new SelectListItem {Text = "100", Value = "100"},
                        new SelectListItem {Text = "150", Value = "150"}
                }, "Select Credits", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Credits, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    <br />
}

<div>
    @Html.ActionLink("View Subjects", "Index")
</div>

@section
scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}