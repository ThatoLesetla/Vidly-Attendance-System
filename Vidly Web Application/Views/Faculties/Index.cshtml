@model IEnumerable<Vidly_Web_Application.Models.Faculty>

@{
    ViewBag.Title = "Index";
}

<h2>Faculties</h2>

<p>
    <a href="/Faculties/Create" class="btn btn-primary">Add New</a>
</p>


<div class="module">
    <div class="module-head">
        <h3>
            Tshwane University of Technology 
        </h3>
    </div>
    <div class="module-body table">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display"
               width="100%">
            <thead>
                <tr>
                    <th>
                        Code
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Building
                    </th>
                    <th>
                        Campus
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr class="odd gradeX">
                        <td>
                            @Html.DisplayFor(model => item.FacultyCode)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Building)
                        </td>
                        <td class="center">
                            @Html.DisplayFor(model => item.Phone)
                        </td>
                        <td class="center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.FacultyCode }) |
                            @Html.ActionLink("Details", "Details", new { id = item.FacultyCode }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.FacultyCode })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>