@model IEnumerable<Vidly_Web_Application.Models.Semester>

@{
    ViewBag.Title = "Index";
}

<h2>Semesters</h2>
@Html.ActionLink("Export To Excel", "Reports", new { ReportType="Excel"}) |
@Html.ActionLink("Export To PDF", "Reports", new { ReportType = "PDF" }) |
@Html.ActionLink("Export To Word", "Reports", new { ReportType="Word"})
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SemesterDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SemesterDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SemesterCode }) |
            @Html.ActionLink("Details", "Details", new { id=item.SemesterCode }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SemesterCode })
        </td>
    </tr>
}

</table>
