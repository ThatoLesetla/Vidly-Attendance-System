            </div>
        </div>
        <br />

        <div class="form-group">
            <label>Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StaffEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @maxlength = 45 } })
