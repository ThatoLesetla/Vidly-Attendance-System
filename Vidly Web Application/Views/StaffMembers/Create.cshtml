    <div class="column">


        <div class="form-group">
            <label>Staff Number</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StaffID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Staff Number", @id = "staffid", @maxlength = "9" } })
                @Html.ValidationMessageFor(model => model.StaffID, "", new { @class = "text-danger" })

            </div>
        </div>
        <br />

        <div class="form-group">
            <label>Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StaffName, new { htmlAttributes = new { @class = "form-control", @id = "nameTextBox", @placeholder = "Name", @maxlength = 26, @oninput = "validateAlpha()" } })
                @Html.ValidationMessageFor(model => model.StaffName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <label>Surname</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StaffSurname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Surname", @maxlength = 30 } })
