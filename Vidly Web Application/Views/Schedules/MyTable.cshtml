@model IEnumerable<Vidly_Web_Application.Models.Schedule>

@{
    ViewBag.Title = "MyTable";
}

<h2>Timetable</h2>

<div>
   
</div>
<div class="span9">
    <div class="content">
        <div class="module">
            <div class="module-head">
                <h3>Lecture Schedule</h3>
            </div>
            <div class="module-body">
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>
                                Subject Code
                            </th>
                            <th>
                                Semester Code
                            </th>
                            <th>
                                Department Code
                            </th>
                            <th>
                                Day
                            </th>
                            <th>
                                Start Time
                            </th>
                            <th>
                                End Time
                            </th>
                            <th>
                                Venue
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in @Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => item.SubjectCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.SemesterCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.DepartmentCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.ClassDay)
                                </td>
                                <td>
                                    <label>@String.Format("{0:T}", item.StartTime)</label>
                                </td>
                                <td>
                                    <label>@String.Format("{0:T}", item.EndTime)</label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Venue)
                                </td>
                            </tr>
                        }
                    </tbody>

                </table> 
            </div>
        </div>
    </div>
</div>
